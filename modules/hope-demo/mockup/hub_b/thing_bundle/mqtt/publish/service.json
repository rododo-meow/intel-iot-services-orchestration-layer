{
  "description":"pushlish a message to the mqtt broker",
   "spec": {
    "id": "__HOPE__/demo/mockup/hub_b/mqtt/publish",
    "in": {
      "ports": [{
        "name": "message",
        "type": "string"
        }]
    },
    "out": {
      "ports": [{
        "name": "status",
        "type": "boolean"
      }]
    },
    "config": [
      {
        "name": "server",
        "required": true
      }, {
        "name": "topic",
        "type": "string",
        "required": true
      }
    ]
  }
}